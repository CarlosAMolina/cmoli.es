DOCKER_CUSTOM_IMAGE_NAME=python-create-pandoc-script
DOCKER_CONTAINER_NAME=$(DOCKER_CUSTOM_IMAGE_NAME)-container
DOCKER_IMAGE_NAME=python:latest
DOCKER_VOLUME_WEB_CONTENT_SOURCE=nginx-web-content
DOCKER_VOLUME_WEB_CONTENT_TARGET=/volume

pull-docker-image:
	# https://hub.docker.com/_/nginx/
	docker pull $(DOCKER_IMAGE_NAME)

build-docker-image:
	docker build -t $(DOCKER_CUSTOM_IMAGE_NAME) .

run-container:
	docker run \
		-it \
		--rm \
		-d \
		--name $(DOCKER_CONTAINER_NAME) \
		--mount type=volume,source=$(DOCKER_VOLUME_WEB_CONTENT_SOURCE),target=$(DOCKER_VOLUME_WEB_CONTENT_TARGET) \
		$(DOCKER_CUSTOM_IMAGE_NAME)

copy-web-content:
	#sudo /bin/bash copy-web-content-to-docker-volume $(DOCKER_VOLUME_WEB_CONTENT_SOURCE)
	/bin/bash copy-web-content-to-docker-volume $(DOCKER_VOLUME_WEB_CONTENT_SOURCE)

stop:
	docker stop $(DOCKER_CONTAINER_NAME)

run: pull-docker-image build-docker-image run-container copy-web-content

connect:
	docker exec -it $(DOCKER_CONTAINER_NAME) /bin/sh

