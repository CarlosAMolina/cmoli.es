#!/bin/bash

volume_name_nginx_web_content=$1

volume_path=$(docker volume inspect "${volume_name_nginx_web_content}" --format '{{.Mountpoint}}')
echo "[√êEBUG] Init copy web content to $volume_path"
cp -r src $volume_path
cp -r pandoc-config $volume_path
cp -r md-to-html $volume_path
cp create-pandoc-script $volume_path
